# Configurações do Servidor
PORT=5000
NODE_ENV=development

# Configurações do MongoDB
# Formato: mongodb://[username:password@]host[:port]/database
MONGODB_URI=mongodb://localhost:27017/controle-despensa

# Configurações de Segurança
# Gerar uma chave secreta forte usando: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=sua_chave_secreta_aqui
JWT_EXPIRATION=24h

# Configurações de CORS
# Em desenvolvimento: http://localhost:3000
# Em produção: https://seu-dominio.com
CORS_ORIGIN=http://localhost:3000

# Configurações de Log
# Níveis disponíveis: error, warn, info, debug, verbose
LOG_LEVEL=debug

# Configurações de Rate Limiting
# Tempo em milissegundos (15 minutos = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Número máximo de requisições por janela de tempo
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Compressão
# Níveis: 1-9 (1 = mais rápido, 9 = melhor compressão)
COMPRESSION_LEVEL=6

# Configurações de Cache
# Tempo em segundos (1 hora = 3600)
CACHE_TTL=3600

# Configurações de Debug
# true/false
DEBUG=true
# Níveis disponíveis: error, warn, info, debug, verbose
DEBUG_LEVEL=verbose

# Configurações de Email (opcional)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_email@exemplo.com
SMTP_PASS=sua_senha_aqui

# Configurações de Backup (opcional)
BACKUP_PATH=/caminho/para/backup
BACKUP_FREQUENCY=daily

# Configurações de Monitoramento (opcional)
ENABLE_METRICS=true
METRICS_PORT=9090